class UpdateQueue
  list : List_FromTo
  def init(numVertex : int) : void {
    repeat i <- numVertex {
      repeat j <- numVertex {
        if (i != j) then {
          this.push(new FromTo(i, j))
        }
      }
    }
  }

  def push(ft : FromTo) : void {
    this.list.add(ft)
  }

  def pop() : FromTo {
    let size = this.list.size();
    if (size > 0) then {
      let path = this.list.at(size - 1);
      this.list.remove(size - 1);
      path;
    } else {
      null : FromTo
    }
  }

